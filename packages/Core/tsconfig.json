{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceRoot": "./src",
    "strict": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "lib": [
      "es5",
      "es6"
    ],
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "__tests__",
    "node_modules"
  ]
}
