{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": ".",
    "strict": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "target": "es6",
    "lib": [
      "es5",
      "es6"
    ],
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@Core": [
        "src/Core"
      ],
      "@App/*": [
        "src/App/*"
      ],
      "@AppControllers/*": [
        "src/App/Http/Controllers/*"
      ],
      "@AppMiddlewares/*": [
        "src/App/Http/Middleware/*"
      ],
      "@Config": [
        "src/Config/index.ts"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "types",
    "src/__tests__",
    "node_modules"
  ]
}
