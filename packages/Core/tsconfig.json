{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "strict": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "target": "es6",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "types": [
      // add node as an option
      "node",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
    "paths": {
      "@Core/*": [
        "src/Core/*"
      ],
      "@Providers/*": [
        "src/Core/Providers/*"
      ],
      "@Decorators": [
        "src/Core/Decorators/index.ts"
      ],
      "@App/*": [
        "src/App/*"
      ],
      "@AppControllers/*": [
        "src/App/Http/Controllers/*"
      ],
      "@AppMiddlewares/*": [
        "src/App/Http/Middleware/*"
      ],
      "@Config": [
        "src/Config/index.ts"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "types",
    "node_modules"
  ]
}
