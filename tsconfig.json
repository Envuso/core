{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "lib": [
      "ES2016"
    ],
    "module": "commonjs",
    "target": "ES2016",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/**"
    ],
    "paths": {
      "class-transformer": [
        "./../node_modules/class-transformer"
      ],
      "@configuration" : [
        "Meta/Configuration.ts"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "../Compiler/plugin"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "dist/**/*",
    "Framework/**/*",
    "packages/**/*"
  ],
  "include": [
    "src/AppContainer/**/*",
    "src/Authentication/**/*",
    "src/Authorization/**/*",
    "src/Common/**/*",
    "src/Server/**/*",
    "src/Database/**/*",
    "src/Routing/**/*",
    "src/Storage/**/*",
    "src/Sockets/**/*",
    "src/Cache/**/*",
    "src/Crypt/**/*",
    "src/Crypt/**/*",
    "src/Cli/**/*.ts",
    "src/Meta/**/*.ts",
    "src/run-dev.ts",
    "src/index.ts"
  ]
}
