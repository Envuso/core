{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "lib": [
      "ES2016"
    ],
    "module": "commonjs",
    "target": "ES2016",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist/**/*",
    "Framework/**/*",
    "packages/**/*",
  ],
  "include": [
    "src/AppContainer/**/*",
    "src/Authentication/**/*",
    "src/Common/**/*",
    "src/Core/**/*",
    "src/Database/**/*",
    "src/Routing/**/*",
    "src/Storage/**/*",
  ]
}
